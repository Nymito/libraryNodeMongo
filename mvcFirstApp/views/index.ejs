<h2 class="text-center" style="margin-top: 5%; margin-bottom: 3%;">MOOVIES</h2>




<div class="card-deck" style="width: 100%;">
    <% moovies.forEach(moovie => { %>
        <div class="card bg-dark card-hover">
            <a href="/moovies/<%= moovie.id %>">
                <img class="card-img-top" src="<%= moovie.coverImagePath %>">
            </a>
            <div class="card-body">
              <h5 class="card-title"><%= moovie.title %></h5>
              <p class="card-text"><%= moovie.description %></p>
            </div>
        </div>
    <% }) %> 
    
</div>
<style>
    .card-deck{
        margin-top: 10px;
        margin-left: auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        grid-gap: .5rem;
    }

</style>