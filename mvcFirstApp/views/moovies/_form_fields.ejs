<div class="form-row">
    <div class="form-item">
        <label>Title</label>
        <input type="text" name="title" value="<%= moovie.title %>" required>
    </div>
    <div class="form-item">
        <label>Director</label>
        <select name="author" required>
            <% authors.forEach(author => { %>
                <% if (`${author.id}` === `${moovie.author}`) { %>
                    <option selected label="<%= author.name %>" value= "<%= author.id %>"></option>
                <% }else { %>
                    <option  label="<%= author.name %>" value= "<%= author.id %>"></option>
                <% } %>
            <% }) %> 
        </select>   
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label>Publish Date</label>
        <input type="date" name="publishDate" value="<%= moovie.publishDate == null ? '' : moovie.publishDate.toISOString().split('T')[0] %>" required>
    </div>
   
</div>
<div class="row">
    <div class="special">
        <label>Duration</label>
        <input required class="ml-2 mr-2" type="string" name="durationHour" min="1" value=<%= moovie.durationHour %>> h <input required class="ml-2 mr-2" type="string" name="durationMin" min="1" value=<%= moovie.durationMin %>>min
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Cover</label>
        <input type="file" name="cover" class="filepond" required>
    </div>
    <div class="form-item">
        <label>Description</label>
        <textarea type="string" name="description"><%= moovie.description %></textarea>
    </div>
</div>
