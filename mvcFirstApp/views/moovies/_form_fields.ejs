<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= moovie.title %>">
</div>
<div>
    <label>Author</label>
    <select name="author">
        <% authors.forEach(author => { %>
            <% if (author.id === moovie.author) { %>
                <option selected label="<%= author.name %>" value= "<%= author.id %>"></option>
            <% }else { %>
                <option  label="<%= author.name %>" value= "<%= author.id %>"></option>
            <% } %>
        <% }) %> 
    </select>   
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate" value="<%= moovie.publishDate == null ? '' : moovie.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Duration</label>
    <input type="string" name="duration" min="1" value=""+<%= moovie.duration%>>
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover">
</div>
<div>
    <label>Description</label>
    <textarea type="string" name="description"><%= moovie.description %></textarea>
</div>

<script>
    function minutsToHm(d) {
        d = Number(d);
        var h = Math.floor(d / 60);
        var m = Math.floor(d % 60);
    

        var hDisplay = h > 0 ? h + (h == 1 ? " hour, " : " hours, ") : "";
        var mDisplay = m > 0 ? m + (m == 1 ? " minute, " : " minutes") : "";
       
        return hDisplay + mDisplay; 
    }
</script>