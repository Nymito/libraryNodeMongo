<div class="form-row">
    <div class="form-item">
        <label>Title</label>
        <input type="text" name="title" value="<%= moovie.title %>">
    </div>
    <div class="form-item">
        <label>Author</label>
        <select name="author">
            <% authors.forEach(author => { %>
                <% if (`${author.id}` === `${moovie.author}`) { %>
                    <option selected label="<%= author.name %>" value= "<%= author.id %>"></option>
                <% }else { %>
                    <option  label="<%= author.name %>" value= "<%= author.id %>"></option>
                <% } %>
            <% }) %> 
        </select>   
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label>Publish Date</label>
        <input type="date" name="publishDate" value="<%= moovie.publishDate == null ? '' : moovie.publishDate.toISOString().split('T')[0] %>">
    </div>
   
</div>
<div class="row">
    <div class="special">
        <label>Duration</label>
        <input class="ml-2 mr-2" type="string" name="durationHour" min="1" value=<%= moovie.durationHour %>> h <input class="ml-2 mr-2" type="string" name="durationMin" min="1" value=<%= moovie.durationMin %>>min
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Cover</label>
        <input type="file" name="cover" class="filepond">
    </div>
    <div class="form-item">
        <label>Description</label>
        <textarea type="string" name="description"><%= moovie.description %></textarea>
    </div>
</div>
<style>
    .form-row{
        display: flexbox;
        margin-bottom: .5rem;
    }
    .special{
        display: flex;
        margin-left: 2rem;
        margin-bottom: .5rem;
        margin-top: .5rem;
        flex-grow: 1;
        flex-basis: 0;
    }
    .special > label{
        font-size: 1.2rem;
        margin-bottom: .25rem;
        margin-left: .75rem;
    }
    .form-item{
        display: flex;
        flex-direction: column;
        margin-left: 2rem;
        flex-grow: 1;
        flex-basis: 0;
    }
    .form-item-no-grow{
        flex-grow: 0;
    }

    .form-item:first-child{
        flex-grow: 0;
    }

    .form-item > label{
        font-size: 1.2rem;
        margin-bottom: .25rem;
        margin-left: .25rem;
    }

    .form-item input, .form-item select, .form-item textarea, .special input{
        height: 2rem;
        padding: .25rem .5rem;
        border-radius: .25rem;
        border: 1px solid black;
        background-color: #aaaaaa ;
        font-size: 1rem;
        font-weight: normal;
        outline: none;
    }



    .form-item textarea{
        height: 100%;
        resize: none;
    }

    .filepond--root{
        font-family: 'Economica';
        margin-bottom: 0;
    }

    .filepond--panel-root{
        background-color: #aaaaaa;
        border: 1px solid black;
    }

    .filepond--drop-label{
        color: white;
        font-size: inherit;
    }

</style>