<h2 class="title-page">MOVIES</h2>

<form action="/moovies" method="GET">
    <div class="input-group rounded mb-5">
        <input style="background-color: #181818; border-color: #aaaaaa;" type="text" class="form-control rounded" placeholder="Enter title here" aria-label="Search"
        aria-describedby="search-addon" name="title" value="<%= searchOptions.title %>" />
    
            <button class="btn btn-default" type="submit" style="height: 10px;"><i class="fa fa-search" aria-hidden="true" style="color: white;"></i></button>
        
    </div>
</form>

<div class="row">
        <% moovies.forEach(moovie => { %>
        <div class="col-lg-3">
            <a href="/moovies/<%= moovie.id %>" class="text-decoration-none">
                <div class="card bg-dark card-hover">
                    
                        <img class="card-img-top" src="<%= moovie.coverImagePath %>">
                    
                    <div class="card-body text-light">
                    <h5 class="card-title "><%= moovie.title %></h5>
                    <p class="card-text "><%= moovie.description %></p>
                    </div>
                </div>
            </a>
        </div>
        <% }) %> 
</div>
